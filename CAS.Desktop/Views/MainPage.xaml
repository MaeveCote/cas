<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CAS.Desktop.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CAS.Desktop.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource BackgroundBrush}">

    <Grid Background="{ThemeResource BackgroundBrush}">
        <!-- Columns: Sidebar | Main UI | Variables -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Rows: Title bar + Content -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.ColumnSpan="3"
          Background="{ThemeResource Surface1}" Padding="10">
            <TextBlock Text="Computer Algebra System"
                   FontWeight="Bold"
                   Foreground="{ThemeResource TextBrush}"
                   VerticalAlignment="Center"/>
        </Grid>

        <!-- Sidebar -->
        <StackPanel x:Name="ModePanel" Grid.Row="1" Grid.Column="0"
                Background="{ThemeResource CardBrush}" Padding="10">
            <TextBlock Text="Modes"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Foreground="{ThemeResource SubtextBrush}"/>
            <ToggleButton x:Name="SimplifyToggle"
                Content="Simplify"
                Click="ModeToggle_Click"
                Margin="0,0,0,10"
                Background="{ThemeResource Surface1}"
                Foreground="{ThemeResource TextBrush}"/>
            <ToggleButton x:Name="ExpandToggle"
                Content="Expand"
                Margin="0,0,0,10"
                Click="ModeToggle_Click"
                Background="{ThemeResource Surface1}"
                Foreground="{ThemeResource TextBrush}"/>
            <!-- Icons -->
            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="🧮" Foreground="{ThemeResource TextBrush}"/>
                <TextBlock Text="📝" Foreground="{ThemeResource TextBrush}"/>
                <TextBlock Text="⚙️" Foreground="{ThemeResource TextBrush}"/>
            </StackPanel>
        </StackPanel>

        <!-- Main UI -->
        <StackPanel Grid.Row="1" Grid.Column="1" Padding="10" Spacing="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="InputTextBox"
                     PlaceholderText="Text entry..."
                     Margin="0,0,10,0"
                     Background="{ThemeResource CardBrush}"
                     Foreground="{ThemeResource TextBrush}"/>

                <Button Content="Run"
                    Grid.Column="1"
                    Background="{ThemeResource AccentBrush}"
                    Foreground="Black"/>
            </Grid>

            <Border BorderBrush="{ThemeResource Surface1}"
                BorderThickness="1"
                Background="{ThemeResource CardBrush}"
                Padding="10">
                <TextBlock Text="LaTeX Expression Render Input"
                       Foreground="{ThemeResource TextBrush}"/>
            </Border>

            <Border BorderBrush="{ThemeResource Surface1}"
                BorderThickness="1"
                Background="{ThemeResource CardBrush}"
                Padding="10">
                <TextBlock Text="LaTeX Expression Render Result"
                       Foreground="{ThemeResource TextBrush}"/>
            </Border>
        </StackPanel>

        <!-- Variable Panel -->
        <StackPanel Grid.Row="1" Grid.Column="2"
            Background="{ThemeResource CardBrush}"
            Padding="10" Spacing="10">
            <TextBlock Text="Variables"
               FontWeight="Bold"
               Foreground="{ThemeResource SubtextBrush}"/>

            <!-- Add Variable Inputs -->
            <StackPanel Orientation="Horizontal" Spacing="5">
                <TextBox x:Name="VarNameBox"
                 Width="60"
                 PlaceholderText="Name"
                 Background="{ThemeResource Surface1}"
                 Foreground="{ThemeResource TextBrush}"/>
                <TextBox x:Name="VarValueBox"
                 Width="80"
                 PlaceholderText="Value"
                 Background="{ThemeResource Surface1}"
                 Foreground="{ThemeResource TextBrush}"/>
                <Button Content="+" Click="AddVariable_Click"
                Background="{ThemeResource AccentBrush}"
                Foreground="Black"/>
            </StackPanel>

            <!-- Dynamic variable list -->
            <StackPanel x:Name="VariableList" Spacing="5"/>
        </StackPanel>
    </Grid>
</Page>
